{
  "name": "@workablehr/orka",
  "version": "0.17.5",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean",
    "build": "tsc -p src",
    "prewatch": "npm run clean",
    "watch": "tsc -w -p src",
    "prepublishOnly": "npm run build && npm test",
    "pretest": "tslint --project ./src/ && tslint  ./test/**/*.ts && npm run build",
    "test": "nyc mocha",
    "prepare": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --print-width 120 --single-quote true --write",
      "git add"
    ]
  },
  "author": "Nikos Kostoulas <kostoulas@workable.com>",
  "contributors": [
    "Anastasios Kakalis <anastasios@workable.com>"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Workable/orka.git"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@workablehr/riviere": "^1.4.0",
    "codependency": "^2.1.0",
    "diamorphosis": "^0.8.1",
    "fast-koa-router": "^1.0.1",
    "honeybadger": "^1.3.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.11",
    "log4js": "^4.2.0",
    "mongoose": "^5.7.1",
    "rabbit-queue": "4.2.0",
    "source-map-support": "^0.5.12",
    "tmp": "^0.1.0",
    "tsconfig-paths": "^3.8.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/lodash": "^4.14.129",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.5.7",
    "@types/node": "^11.13.8",
    "@types/sinon": "^7.0.13",
    "husky": "^3.0.5",
    "lint-staged": "^9.0.2",
    "mocha": "^6.1.4",
    "mock-require": "^3.0.3",
    "newrelic": "*",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "should": "^13.2.3",
    "sinek": "^7.30.1",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "optionalPeerDependencies": {
    "newrelic": "*",
    "sinek": "^7.30.1"
  }
}
