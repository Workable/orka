{
  "name": "@workablehr/orka",
  "version": "0.32.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean",
    "build": "tsc -p src",
    "prewatch": "npm run clean",
    "watch": "tsc -w -p src",
    "prepublishOnly": "npm run build && npm test",
    "pretest": "tslint --project ./src/ && tslint  ./test/**/*.ts && npm run build",
    "test": "nyc mocha",
    "prepare": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --print-width 120 --single-quote true --write",
      "git add"
    ]
  },
  "author": "Nikos Kostoulas <kostoulas@workable.com>",
  "contributors": [
    "Anastasios Kakalis <anastasios@workable.com>"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Workable/orka.git"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@google-cloud/debug-agent": "^4.2.1",
    "@hapi/joi": "^17.1.0",
    "@workablehr/riviere": "^1.8.0",
    "codependency": "^2.1.0",
    "diamorphosis": "^0.8.1",
    "fast-koa-router": "^1.2.0",
    "honeybadger": "^1.3.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.15",
    "log4js": "^4.2.0",
    "mongoose": "^5.10.2",
    "node-cron": "^2.0.3",
    "rabbit-queue": "*",
    "redis": "^2.8.0",
    "source-map-support": "^0.5.16",
    "tmp": "^0.1.0",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/bull": "^3.14.0",
    "@types/koa": "^2.0.52",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/lodash": "^4.14.147",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.5.31",
    "@types/node": "^11.15.2",
    "@types/redis": "^2.8.14",
    "@types/sinon": "^7.5.0",
    "bull": "^3.16.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "mocha": "^8.1.3",
    "mock-require": "^3.0.3",
    "newrelic": "*",
    "node-rdkafka": "^2.8.1",
    "nyc": "^15.1.0",
    "prettier": "^1.19.1",
    "should": "^13.2.3",
    "sinek": "*",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "optionalPeerDependencies": {
    "bull": "*",
    "newrelic": "*",
    "sinek": "*"
  }
}
