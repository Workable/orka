{
  "name": "@workablehr/orka",
  "version": "0.2.0",
  "description": "",
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean",
    "build": "tsc -p src",
    "prewatch": "npm run clean",
    "watch": "tsc -w -p src",
    "prepublishOnly": "npm run build && npm test",
    "pretest": "tslint src/*.ts",
    "test": "nyc mocha"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --print-width 120 --single-quote true --write",
      "git add"
    ]
  },
  "author": "Nikos Kostoulas <kosotulas@workable.com>",
  "contributors": [
    "Anastasios Kakalis <anastasios@workable.com>"
  ],
  "license": "ISC",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/koa": "^2.0.48",
    "diamorphosis": "^0.8.1",
    "fast-koa-router": "^0.1.0",
    "honeybadger": "^1.3.0",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.11",
    "log4js": "^4.2.0",
    "newrelic": "^5.8.0",
    "riviere": "^0.3.0",
    "source-map-support": "^0.5.12",
    "tsconfig-paths": "^3.8.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.129",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.8",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "should": "^13.2.3",
    "sinon": "^7.3.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
