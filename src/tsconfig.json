{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "../build",
    "sourceMap": true,
    "baseUrl": ".",
  },
  "filesGlob": [
    "./*.ts"
  ]
}
