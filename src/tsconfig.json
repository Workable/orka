{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "../build",
    "noUnusedLocals": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "orka/*": ["./*"]
    },
    "lib": ["es2019", "es2020.string", "dom"]
  },
  "filesGlob": ["./*.ts"]
}
